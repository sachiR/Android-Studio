<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@drawable/main_screen_background"
android:orientation="vertical"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="co.dev.rsp.astronut.MainActivity">

<ImageButton
    android:id="@+id/game_button"
    android:layout_width="258dp"
    android:layout_height="52dp"
    android:layout_gravity="center"
    android:layout_marginTop="200dp"
    android:src="@drawable/play_game_button"
    android:contentDescription="@string/play_game"/>

<ImageButton
    android:id="@+id/options_button"
    android:layout_width="182dp"
    android:layout_height="54dp"
    android:layout_marginTop="30dp"
    android:layout_gravity="center"
    android:src="@drawable/setting_button"
    android:contentDescription="@string/settings"/>

</LinearLayout>
